{
    "site": {
        "version": "0.0.1", 
        "theme": {
            "name": "bear"
        }, 
        "languages": {
            "enabled": [
                "en", 
                "ja", 
                "zh-tw"
            ]
        }, 
        "collection": {
            "enabled": true, 
            "pagesDirName": "blog", 
            "index": {
                "documentStore": {
                    "document": {
                        "id": "id", 
                        "tag": "tags", 
                        "index": [
                            "name", 
                            "description"
                        ], 
                        "store": true
                    }
                }
            }, 
            "media": {
                "extensions": {
                    "allowed": [
                        "gif", 
                        "jpg", 
                        "jpeg", 
                        "mp3", 
                        "mp4", 
                        "pdf", 
                        "png"
                    ]
                }
            }, 
            "taxonomy": {
                "categories": [
                    "africa", 
                    "asia", 
                    "australia", 
                    "europe", 
                    "north-america", 
                    "south-america"
                ]
            }, 
            "pagination": {
                "size": 10
            }, 
            "sort": {
                "key": "date", 
                "order": "desc"
            }, 
            "search": {
                "minQueryLength": 2
            }
        }, 
        "assets": {
            "minify": {
                "css": false,
                "html": false, 
                "js": false
            }
        }, 
        "html": {
            "inject": {
                "metadata": true, 
                "systemAssets": true
            }
        }, 
        "web": {
            "domain": "localhost:8080", 
            "http": {
                "secure": false
            }, 
            "host": {
                "apache": false, 
                "cloudflarePages": true
            }
        }, 
        "urls": {
            "external": {
                "facebook": "https://www.facebook.com", 
                "github": "https://github.com", 
                "instagram": "https://www.instagram.com", 
                "themefisher": "https://github.com/themefisher/logbook-bootstrap", 
                "twitter": "https://x.com"
            }
        }
    }
}